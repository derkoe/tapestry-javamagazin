<html t:type="layout"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
    <!-- Most of the page content, including <head>, <body>, etc. tags, comes from Layout.tml -->

	<div t:type="alerts" dismissText="message:dismiss"></div>

    <p>${message:greeting}</p>

    <p>${message:currentTime}: <strong>${currentTime}</strong></p>

    <!-- A Zone is a component that can be updated in place, triggered by other components. -->
    <t:zone t:id="zone">
        <p>
            <t:outputraw value="clickCountMessage" />
        </p>

        <p>
            [ <a t:type="actionlink" t:id="increment">${message:increase}</a> ]
            &nbsp;
            [ <a t:type="actionlink" t:id="incrementAjax" zone="^">${message:increase-ajax}</a> ]
        </p>
    </t:zone>

	<p>
		${message:eventlink-in-template}:
		<t:eventlink event="resetcounter" context="literal:0">${message:reset}</t:eventlink>
	</p>
	<p>
		${message:eventlink-invisible-instrumentation}:
		<a href="#" t:type="EventLink" event="resetcounter" context="literal:0">${message:reset}</a>
	</p>
	<p>
		${message:eventlink-component-in-class}:
		<a href="#" t:id="resetCounterLink">${message:reset}</a>
	</p>

</html>
