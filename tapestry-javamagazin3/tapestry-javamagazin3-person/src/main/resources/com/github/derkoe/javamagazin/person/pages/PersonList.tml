<html t:type="layout"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

	<section id="buttons">
		<a t:type="pagelink" page="person/new" href="#" class="btn btn-primary">${message:createNewPersonPage}</a>
		<a t:type="eventlink" event="new" href="#" class="btn btn-primary" zone="newPersonZone">${message:createNewPersonInline}</a>
	</section>

	<section id="personNew">
		<t:zone id="newPersonZone">
			<t:block id="newPersonBlock">
				<form t:type="person/PersonEditor" person="person" header="message:pagetitle.person/New" zone="newPersonZone"/>
			</t:block>
		</t:zone>
	</section>

	<section id="personList">
		<table t:type="grid" source="personList" exclude="id" add="editActions" row="person" class="table table-striped">
			<p:editActionsCell>
				<a t:type="pagelink" page="person/edit" context="person.id" href="#" class="btn btn-primary btn-small">${message:editPerson}</a>
				<a t:type="eventlink" event="delete" context="person.id" href="#" class="btn btn-small">${message:deletePerson}</a>
			</p:editActionsCell>
			<p:empty>
				<p>${message:noPersonCreated}</p>
			</p:empty>
		</table>
	</section>
</html>
